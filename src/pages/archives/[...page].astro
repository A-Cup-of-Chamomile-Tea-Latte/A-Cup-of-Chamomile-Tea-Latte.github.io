---
import { getCollection, type CollectionEntry } from "astro:content";

import BaseLayout from "../../layouts/BaseLayout.astro";
import { __ } from "../../utils/i18n";
import Footer from "../../components/Footer.astro";
import TagList from "../../components/partial/TagList.astro";
import ArchiveList from "../../components/ArchiveList.astro";
import Pagination from "../../components/Pagination.astro";
import HeaderTitle from "../../components/partial/HeaderTitle.astro";
import { BASE_URL } from "../../utils/config";
import CategoryList from "../../components/partial/CategoryList.astro";

export async function getStaticPaths({ paginate }: { paginate: Function }) {
  const posts = await getCollection("blog");
  posts.sort((a, b) => {
    return b.data.pubDate.getTime() - a.data.pubDate.getTime();
  });
  return paginate(posts, {
    pageSize: 10,
  });
}

type Props = {
  page: {
    data: CollectionEntry<"blog">[];
    url: {
      prev: string;
      next: string;
    };
    currentPage: number;
    lastPage: number;
  };
};

const { page } = Astro.props;

// --- 數據抓取與處理核心區塊 ---
const posts = await getCollection("blog");
const categories = new Set<string>();
const tagCounts = new Map<string, number>();

posts.forEach((post) => {
  // 處理分類：維持 Set
  if (Array.isArray(post.data.categories)) {
    post.data.categories.forEach((category) => categories.add(category));
  }
  // 處理標籤：計算出現頻率
  if (Array.isArray(post.data.tags)) {
    post.data.tags.forEach((tag) => {
      tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
    });
  }
});

// --- 修改點：定義「Top Tags」並包含數量 ---
const topTags = Array.from(tagCounts.entries())
  .sort((a, b) => b[1] - a[1]) // 頻率高到低
  .slice(0, 15)                 // 只取前 15 個 (可依喜好調整數字)
  .map(([name, count]) => ({ name, count })); // 關鍵：打包成物件格式
---

<BaseLayout title={__("archive_a")}>
  <!-- Header -->
  <HeaderTitle
    title={__("archive_a")}
    url=`${BASE_URL}/archives`
    slot="header"
  />
  <!-- Content -->
  <section id="main" aria-label="Main content">
    <div class="archives-outer-wrap" data-aos="fade-up">
      <!-- 這裡現在傳入的是物件陣列，而不是純字串陣列了 -->
      <TagList tags={topTags} />
      <CategoryList categories={[...categories]} />
      <ArchiveList page={page} type="archives" />
    </div>
    <Pagination
      prevUrl={page.url.prev}
      nextUrl={page.url.next}
      currentPage={page.currentPage}
      lastPage={page.lastPage}
      url="/archives"
    />
  </section>
  <!-- Footer -->
  <Footer slot="footer" />
</BaseLayout>

<style>
  .archives-outer-wrap {
    background: var(--color-wrap);
    border-radius: 12px;
    padding: 16px 0;
  }
</style>